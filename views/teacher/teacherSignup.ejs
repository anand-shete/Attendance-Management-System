    <h1>Teacher Sign Up</h1>
    <% if (locals.error) { %>
      <div class="container mt-4">
        <div class="alert alert-danger" role="alert">
          <%= locals.error %>
        </div>
      </div>
      <% } %>
      <form action="/teacher/signup" method="post">
        <div>
          <label for="faculty_id">Full Name: </label>
          <input type="text" id="faculty_id" name="fullname" placeholder="Enter Faculty ID">
        </div>
        <div>
          <label for="faculty_id">Teacher ID: </label>
          <input type="text" id="faculty_id" name="faculty_id" placeholder="Enter Faculty ID">
        </div>
        <div>
          <label for="subject">Subject: </label>
          <input type="text" id="subject" name="subject" placeholder="Enter Subject">
        </div>
        <div>
          <label for="password">Password: </label>
          <input type="password" id="password" name="password" placeholder="Enter Password">
        </div>
        <button type="submit">Submit</button>
      </form>

</body>
   <%- include('../common/script')%>

</html>